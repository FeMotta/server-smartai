{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6", 
    "module": "CommonJS", // Specify the module format for your compiled code
    "outDir": "./build", // Set the directory where your compiled code will be output
    "rootDir": "./src", // Set the directory where your TypeScript source files are located
    "strict": true, // Enable strict type checking and other strict mode features
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "sourceMap": true, // Generate source maps for your compiled code
    "declaration": true, // Generate declaration files for your compiled code
  },
  "include": ["src/**/*.ts"], // Set the files to be included in the compilation
  "exclude": ["node_modules", "**/*.spec.ts"] // Set the files to be excluded from the compilation
}
